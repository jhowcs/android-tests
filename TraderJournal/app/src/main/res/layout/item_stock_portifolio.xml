<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:context="br.com.jhowcs.traderjournal.activity.MainActivity">

    <TextView
        android:id="@+id/txtStockName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#646362"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="USIM5" />

    <TextView
        android:id="@+id/lblEntryPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="entry price"
        android:textColor="#646362"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtStockName" />

    <TextView
        android:id="@+id/txtEntryPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="R$ 9,14"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/lblEntryPrice"
        app:layout_constraintTop_toBottomOf="@id/lblEntryPrice" />

    <TextView
        android:id="@+id/lblStopLoss"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="stop loss"
        android:textColor="#646362"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/lblEntryPrice"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/txtStopLoss"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="R$ 8,95"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/txtEntryPrice"
        app:layout_constraintRight_toRightOf="@id/lblStopLoss" />

</android.support.constraint.ConstraintLayout>
